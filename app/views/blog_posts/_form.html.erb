<% form_for(@record) do |f| -%>
<%= error_messages_for :blog_post -%>

<p>
  <%=  f.label :title -%><br />
  <%= f.text_field :title -%>
</p>

<p>
  <%=  f.label :body -%><br />
  <%=  f.text_area :body -%>
</p>
<p>
	<% for category in Category.all %>
	
	<div>
		<%= check_box_tag('blog_post[category_ids][]',category.id,@record.categories.include?(category)) %>
		<%= category.title %>
	</div>
	
	<% end %>
<p>
  <%=  f.submit controller.action_name=='new'? 'Create':'Update' -%>
</p>
<% end -%>
<br />