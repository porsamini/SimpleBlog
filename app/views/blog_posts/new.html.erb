<h2>New Blog Post</h2>
<% form_for(@blog_post) do |f| %>
<%= f.error_messages %>

<p>
  <%=  f.label :title -%><br />
  <%=  f.text_field :title -%>
</p>

<p>
  <%=  f.label :body -%><br />
  <%=  f.text_area :body -%>
</p>

<p>
  <%=  f.submit 'Create' -%>
</p>
<% end %>
<br />
<%= link_to 'Back', :action => "index" %>