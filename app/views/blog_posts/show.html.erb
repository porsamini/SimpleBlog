<h1>BlogPost#show</h1>
<h2>Title: <b><i><%= @record.title  -%></i></b></h2>
<p>
<%= @record.body  -%>
</p>
<% for category in @record.categories %>
<%= link_to(category.title,category_path(category))%>|
<%end%>
<h3><i>Comments:</i></h3>
<div id ="show_comments">
  <hr></hr>
  <% for comment in @record.comments -%>
  <%= comment.content %><br/>
  <hr></hr>
  <% end -%>
</div>

