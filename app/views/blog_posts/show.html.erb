<div id="comment" style="display:none;">
	<%= form_tag blog_post_comments_path(@record) %>
	<%= text_area_tag :comment,nil,:cols=>"30",:rows=>"5" %><br />
	<%= submit_tag('Comment') %> <a href="#" onclick="$('comment').hide();$('new_comment_link').show();" >Cancel</a>
</div>
<div id="new_comment_link">
<a href="#" onclick="$('comment').show();$('new_comment_link').hide();");>New comment</a> <br />	
</div>
