<h1>BlogPost#show</h1>
<h2>Title: <b><i><%= @record.title  -%></i></b></h2>
<p>
<%= @record.body  -%>
</p>
<h3><i>Comments:</i></h3>
<div id ="show_comments">
  <hr></hr>
  <% for comment in @record.comments -%>
  <%= comment.content %><br/>
  <hr></hr>
  <% end -%>

</div>



<div id ="comment_button">
<%= link_to_remote('New Comment', :url => new_blog_post_comment_path(@record)) -%>
</div>


<%= link_to 'Back', blog_posts_path -%>
